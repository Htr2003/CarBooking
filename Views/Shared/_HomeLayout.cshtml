<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <link rel="stylesheet" href="~/Content/homeStyle.css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>

</head>
<body>

    <header style="background-color: darkcyan;">
        <div class="logo">
            <img src="#" alt="Logo" width="100" height="100">
        </div>
        <div class="hotline" style="font-size: 20px;">
            Hotline: 0914579677
        </div>
        <nav>
            <ul>
                <li style="font-size: 20px;"><a href="#">Gioi thieu</a></li>

                <li style="display: inline-block; margin-right: 60px; font-size: 20px; " class="nav-link dropdown">
                    <a class="nav-link dropdown-toggle link-dark" data-bs-toggle="dropdown" href="#">Dich vu</a>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="#"> Dat xe nhanh </a></li>
                        <li><a class="dropdown-item" href="#"> xe du lich </a></li>
                        <li><a class="dropdown-item" href="#"> xe di tinh </a></li>
                    </ul>
                </li>

                <li style="font-size: 20px;"><a href="#">Vi vns</a></li>

                @if (Session["Name"] == null)
                {
                    <li style="display: inline-block; margin: auto; font-size: 20px; " class="nav-link dropdown ">
                        <a class="nav-link dropdown-toggle link-dark" data-bs-toggle="dropdown" href="~/Home/Login">Tài khoản</a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="~/Home/Login">Đăng nhập</a></li>
                            <li><a class="dropdown-item" href="~/Home/Register">Đăng kí</a></li>
                        </ul>
                    </li>

                }
                else
                {
                    <li style="display: inline-block; margin: auto; font-size: 20px; " class="nav-link dropdown ">
                        <span class="nav-link dropdown-toggle link-dark " data-bs-toggle="dropdown">@Session["Name"]</span>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="@Url.Action("Detail", "Home", new { idCus = Session["KhID"]})">Thông tin tài khoản</a></li>
                            <li><a class="dropdown-item" href="~/Home/Logout">Đăng xuất</a></li>
                        </ul>
                    </li>  
                }
            </ul>
        </nav>
    </header>

    <div>
        @RenderBody()
    </div>


</body>
</html>
