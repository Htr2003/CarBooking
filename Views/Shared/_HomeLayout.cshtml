                <li style="font-size: 20px;"><a href="#">Vi vns</a></li>

                @if (Session["Name"] == null)
                {
                    <li style="display: inline-block; margin: auto; font-size: 20px; " class="nav-link dropdown ">
                        <a class="nav-link dropdown-toggle link-dark" data-bs-toggle="dropdown" href="~/Home/Login">Tài khoản</a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="~/Home/Login">Đăng nhập</a></li>
                            <li><a class="dropdown-item" href="~/Home/Register">Đăng kí</a></li>
                        </ul>
                    </li>

                }
                else
                {
                    <li style="display: inline-block; margin: auto; font-size: 20px; " class="nav-link dropdown ">
                        <span class="nav-link dropdown-toggle link-dark" data-bs-toggle="dropdown">@Session["Name"]</span>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="@Url.Action("Detail", "Home", new { khID = Session["KhID"]})">
                                Thông tin tài khoản</a>
                            </li>
                            <li><a class="dropdown-item" href="~/Home/LichSu">Lịch sử đặt xe</a></li>
                            <li><a class="dropdown-item" href="~/Home/Logout">Đăng xuất</a></li>
                        </ul>
                    </li>

                }
            </ul>
        </nav>
    </header>

    <div>
        @RenderBody()

        @RenderSection("scripts", required: false)
    </div>
    <hr style="background-color: black; margin-left:100px; margin-right: 100px;"/>
    <div class="bs_footer" style="padding: 0 10% 0 10%; border:medium;">
        <table class="table table-borderless">
            <tr>
                <th>
