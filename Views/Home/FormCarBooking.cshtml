@model CarBooking.Models.DATXE

@{
    ViewBag.Title = "FormCarBooking";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";

    <link rel="stylesheet" href="~/Content/formCBstyle.css" />
}
<img src="~/image/banner.png" style="width:100%; height:350px;"/>

<div class="container">
    <div class="slogan-container">
        <ul>
            <li>An toàn, đúng hạn</li>
            <li>Không phát sinh chi phí</li>
            <li>Bùng nổ ưu đãi</li>
        </ul>
    </div>


    <div class="form-container">
        <h1>Dat xe nhanh</h1>
        @using (Html.BeginForm("FormCarBooking", "Home", FormMethod.Post))
        {
            <div class="form-group">
                <label for="from">Điểm đi:</label>
                <input type="text" id="from" name="DiemXuatPhat" required>
            </div>

            <div class="form-group">
                <label for="to">Điểm đến:</label>
                <input type="text" id="to" name="DiemDen" required>
            </div>

            <div class="form-group">
                <label for="quandiquyen">Quận đi:</label>
                @Html.DropDownList("QuanDiQuyen", new SelectList(new[]
                    {
                        new SelectListItem { Text = "Quận 1", Value = "Quận 1" },
                        new SelectListItem { Text = "Quận 2", Value = "Quận 2" },
                        new SelectListItem { Text = "Quận 3", Value = "Quận 3" },
                        new SelectListItem { Text = "Quận 4", Value = "Quận 4" },
                        new SelectListItem { Text = "Quận 5", Value = "Quận 5" },
                        new SelectListItem { Text = "Quận 6", Value = "Quận 6" },
                        new SelectListItem { Text = "Quận 7", Value = "Quận 7" },
                        new SelectListItem { Text = "Quận 8", Value = "Quận 8" },
                        new SelectListItem { Text = "Quận 9", Value = "Quận 9" },
                        new SelectListItem { Text = "Quận 10", Value = "Quận 10" },
                        new SelectListItem { Text = "Quận 11", Value = "Quận 11" },
                        new SelectListItem { Text = "Quận 12", Value = "Quận 12" },
                    }, "Value", "Text"), "Chọn quận", new { @class = "form-control", required = "required" })
            </div>

            <div class="form-group">
                <label for="quandenquyen">Quận đến:</label>
                @Html.DropDownList("QuanDenQuyen", new SelectList(new[]
                    {
                        new SelectListItem { Text = "Quận 1", Value = "Quận 1" },
                        new SelectListItem { Text = "Quận 2", Value = "Quận 2" },
                        new SelectListItem { Text = "Quận 3", Value = "Quận 3" },
                        new SelectListItem { Text = "Quận 4", Value = "Quận 4" },
                        new SelectListItem { Text = "Quận 5", Value = "Quận 5" },
                        new SelectListItem { Text = "Quận 6", Value = "Quận 6" },
                        new SelectListItem { Text = "Quận 7", Value = "Quận 7" },
                        new SelectListItem { Text = "Quận 8", Value = "Quận 8" },
                        new SelectListItem { Text = "Quận 9", Value = "Quận 9" },
                        new SelectListItem { Text = "Quận 10", Value = "Quận 10" },
                        new SelectListItem { Text = "Quận 11", Value = "Quận 11" },
                        new SelectListItem { Text = "Quận 12", Value = "Quận 12" },
                    }, "Value", "Text"), "Chọn quận", new { @class = "form-control", required = "required" })
            </div>

            <div class="form-group">
                <label for="datetime">Thời gian:</label>
                <input type="datetime-local" id="datetime" name="ThoiGian" required>
                @Html.ValidationMessageFor(m => m.ThoiGian)
            </div>

            <div class="form-group">
                <label for="carType">Loại xe:</label>
                <select id="carType" name="LoaiXe" required>
                    <option value="xe 4 chỗ">Xe 4 chỗ</option>
                    <option value="xe 7 chỗ">Xe 7 chỗ</option>
                    <option value="xe du lịch">xe du lịch</option>
                </select>
            </div>

            <input style="border-radius:21px;" type="submit" value="Đặt xe">
        }
    </div>
</div>

